{% extends 'base.html.twig' %}


{% block body %}
    <section class="bg-gray-100 pb-10">
        {% block nav %}
            <header class="w-full flex justify-center border-b border-gray-200 bg-white">
                <nav class="w-full max-w-[80rem] flex justify-between py-1 items-center">
                    <div>
                        Logo
                    </div>
                    <div>
                        <wa-button appearance="plain" href="{{ path('app_login') }}">
                            <wa-icon name="user" slot="start"></wa-icon>
                            {{ 'login'|trans({}, 'common') }}
                        </wa-button>
                        <wa-button appearance="plain" href="{{ path('app_register') }}">
                            <wa-icon name="right-to-bracket" slot="start"></wa-icon>
                            {{ 'register'|trans({}, 'common') }}
                        </wa-button>
                    </div>
                </nav>
            </header>
        {% endblock %}

        <section class="flex justify-center w-ful">
            <div class="w-full max-w-[80rem] flex justify-center">
                {% block content %}
                {% endblock %}
            </div>
        </section>
    </section>
{% endblock %}

