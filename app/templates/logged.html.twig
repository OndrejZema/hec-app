{% extends 'base.html.twig' %}
{% set currentRoute = app.request.attributes.get('_route') %}
{% block body %}
    <div class="logged-layout">
        <div class="logged-layout-logo bg-white">
            <img src="{{ asset('imgs/logo.svg') }}" class="size-35">
        </div>
        <header class="logged-layout-header flex justify-between p-2 items-center bg-white mr-10">
            <div class="flex items-center gap-2">
                Current House
                <wa-dropdown>
                    <wa-button size="small" slot="trigger" appearance="outlined">
                        <div class="flex justify-between items-center min-w-60">
                            <div class="flex items-center gap-1">
                                <wa-icon name="house"></wa-icon>
                                <div class="mt-0.5">House 2</div>
                            </div>
                            <wa-icon name="chevron-down"></wa-icon>
                        </div>
                    </wa-button>
                    <wa-dropdown-item>House 1</wa-dropdown-item>
                </wa-dropdown>
                <wa-button size="small" appearance="filled">
                    <wa-icon name="plus"></wa-icon>
                </wa-button>
            </div>
            <div class="flex items-center">
                <twig:LanguageSelect/>
                <twig:ProfileDropdown/>
            </div>
        </header>

        <nav class="logged-layout-nav p-2 bg-white flex flex-col justify-between items-stretch gap-2">
            <div class="flex flex-col gap-2">
                <wa-button size="small" appearance="{{ currentRoute == 'app_dashboard' ? 'filled' : 'plain' }}"
                           variant="neutral" class="w-full">
                    <wa-icon slot="start" name="gauge" class="hec-icon"></wa-icon>
                    {{ 'logged.consumption_profile'|trans({}, 'navigation') }}
                </wa-button>
                <wa-button size="small"
                           appearance="{{ currentRoute == 'app_performance_profile' ? 'filled' : 'plain' }}"
                           variant="neutral" class="w-full">
                    <wa-icon slot="start" name="chart-line" class="hec-icon"></wa-icon>
                    {{ 'logged.performance_profile'|trans({}, 'navigation') }}

                </wa-button>
                <wa-button size="small"
                           appearance="{{ currentRoute == 'app_performance_profile' ? 'filled' : 'plain' }}"
                           variant="neutral" class="w-full">
                    <wa-icon slot="start" name="dollar-sign" class="hec-icon"></wa-icon>
                    {{ 'logged.broker_profile'|trans({}, 'navigation') }}

                </wa-button>
                <wa-button size="small"
                           appearance="{{ currentRoute == 'app_performance_profile' ? 'filled' : 'plain' }}"
                           variant="neutral" class="w-full">
                    <wa-icon slot="start" name="battery-three-quarters" class="hec-icon"></wa-icon>
                    {{ 'logged.battery'|trans({}, 'navigation') }}
                </wa-button>
            </div>
            <div class="w-full flex justify-center">
                <wa-button
                    appearance="filled"
                    variant="neutral" pill>
                    <wa-icon name="cogs" class="hec-icon"></wa-icon>
                </wa-button>
            </div>
        </nav>
        <div class="logged-layout-content p-8 bg-gray-100 border border-gray-200 rounded">
            {% block content %}

            {% endblock %}
        </div>
    </div>
{% endblock %}
