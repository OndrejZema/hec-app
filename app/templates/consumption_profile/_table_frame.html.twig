<turbo-frame id="consumption_profile_table">
    <table>
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Consumption Index</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td>
                    {% if(house.isSelected) %}
                        <wa-icon name="check-circle" class="hec-icon"></wa-icon>
                    {% endif %}
                </td>
                <td>{{ house.name }} {{ house.id }}</td>
                <td>{{ house.description }}</td>
                <td>
                    <div class="flex items-center gap-2 justify-end">
                        {% if( not house.isSelected) %}
                            <form method="POST" action="{{ path('app_house_visit', {id: house.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('visit' ~ house.id) }}">
                                <wa-button type="submit" appearance="plain">
                                    <wa-icon name="play" class="hec-icon"></wa-icon>
                                </wa-button>
                            </form>
                        {% endif %}
                        <wa-button appearance="plain" href="{{ path('app_house_update', {id: house.id}) }}"
                                   target="_top">
                            <wa-icon name="edit"></wa-icon>
                        </wa-button>
                        <twig:DeleteDialog routeName="app_house_delete" id="{{ house.id }}"></twig:DeleteDialog>

                    </div>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <twig:Pagination routeName="app_consumption_profile" page="{{ pagination.page }}" perPage="{{ pagination.perPage }}"
                     lastPage="{{ pagination.lastPage }}"></twig:Pagination>
</turbo-frame>
