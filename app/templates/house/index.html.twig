{% extends 'logged.html.twig' %}

{% block title %}Hello HouseController!{% endblock %}

{% block content %}
    <div class="max-w-[50rem]">
        <div class="flex justify-between">
            <h3 class="">Houses</h3>
            <wa-button size="small" variant="primary" href="{{ path('app_house_create') }}">
                <wa-icon name="add"></wa-icon>
            </wa-button>
        </div>
        <turbo-frame id="house_table" src="{{ path('app_house', {page: page, perPage: perPage}) }}"
                     data-turbo-action="advance">
            <twig:SkeletonTable colsCount="3" rowsCount="5"></twig:SkeletonTable>
        </turbo-frame>
    </div>
{% endblock %}
